<h1>Modifica il  post con titolo <%= @post.title%></h1>


<%= form_for @post do |f|%>
  <div id="errors_form">
  <%if @post.errors.any?%>

<%end%>
  </div>


  <div class="form-group">
    Pubblica Post
    <%= f.check_box :published, class: "form-control"%>
  </div>
    <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :body%>
    <%= f.text_area :body, class: "form-control"%>
  </div>



    <div class="form-group">
    <%= f.label :meta_title  %>
    <%= f.text_field :meta_title, class: "form-control"%>
   </div>

  <div class="form-group">
    <%= f.label :meta_description%>
    <%= f.text_field :meta_description, class: "form-control"%>
  </div>


  <h4 class="my-4">Categories</h4>
  
  <%= hidden_field_tag "post[category_ids][]", nil %>
    <% for category in Category.all %>
      <div class="checkbox">
        <%= check_box_tag "post[category_ids][]", category.id, @post.categories.include?(category) %>
        <%= category.name %>
      </div>
    <% end %>

    <hr>
  
  <div class="form-group">
      <%= f.submit%>
    </div>

<%end%>
