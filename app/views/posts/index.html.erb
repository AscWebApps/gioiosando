<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">TTITLE</th>
      <th scope="col">BODY</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%@posts.each do |post|%>

    <tr>
      <th scope="row"><%= post.id%></th>
      <td><%=post.title%></td>
      <td><%= post.body%></td>
      <td><%= link_to fa_icon("eye"), post_path(post)%></td>
      <td><%= link_to fa_icon("pencil"), edit_post_path(post)%></td>
      <td><%= link_to fa_icon("trash"), post_path(post), method: :delete, data: {confirm: "Sei sicuro di voler eleimiare il post?"}%></td>
    </tr>
     <%end%>

  </tbody>
</table>

<%= link_to "Aggiungi Post", new_post_path%>

