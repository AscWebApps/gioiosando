<h1>Inserisci un nuovo post</h1>


<%= form_for @post do |f|%>
  <div id="errors_form">
  <%if @post.errors.any?%>
    <!--<h2>Errori: <%#=@post.errors.count%></h2>
    <ul>
      <#%@post.errors.full_messages.each do |m|%>
        <li><#%=m%></li>
      <#%end%>
  </ul>-->

  <%end%>
  </div>
    <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :body%>
    <%= f.text_area :body, class: "form-control"%>
  </div>

  <h4 class="my-4">Categories</h4>
  
  <%= hidden_field_tag "post[category_ids][]", nil %>
    <% for category in Category.all %>
      <div class="checkbox">
        <%= check_box_tag "post[category_ids][]", category.id, @post.categories.include?(category) %>
        <%= category.name %>
      </div>
    <% end %>

    <hr>
  <div class="form-group">
      <%= f.submit%>
    </div>

<%end%>
